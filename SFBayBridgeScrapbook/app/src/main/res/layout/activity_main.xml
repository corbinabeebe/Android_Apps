<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/sfBayBridgeScrapbook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/goldengatebridge"
            android:tooltipText="@string/sf_golden_gate_bridge"
            android:layout_width="wrap_content"
            android:layout_height="254dp"
            android:layout_gravity="top"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/sf_golden_gate_bridge"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sfgoldengatebridge" />

        <ImageView
            android:id="@+id/baybridge"
            android:tooltipText="@string/sf_bay_bridge"
            android:layout_width="wrap_content"
            android:layout_height="234dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:contentDescription="@string/sf_bay_bridge"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sfbaybridge" />

        <ImageView
            android:id="@+id/smbridge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="#00CF0B0B"
            android:contentDescription="@string/sm_bridge"
            android:scaleType="fitXY"
            android:tooltipText="@string/sm_bridge"
            app:srcCompat="@drawable/smbridge1024" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>