<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:entries="@array/guesses_list"
        android:entryValues="@array/guesses_list"
        android:key="pref_numberOfChoices"
        android:title="@string/number_of_choices"
        android:summary="@string/number_of_choices_description"
        android:persistent="true"
        android:defaultValue="4" />

    <MultiSelectListPreference
        android:entries="@array/sign_type_list_for_settings"
        android:entryValues="@array/sign_type_list"
        android:key="pref_typesToInclude"
        android:title="@string/sign_types"
        android:summary="@string/sign_type_description"
        android:persistent="true"
        android:defaultValue="@array/sign_type_list"/>


</PreferenceScreen>